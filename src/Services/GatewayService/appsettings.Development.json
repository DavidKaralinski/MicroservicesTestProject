{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "IdentityServiceUrl": "http://localhost:5001",
  "ReverseProxy": {
    "Routes": {
      "auctionsRead" : {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          { 
            "PathPattern": "/api/auctions/{**catch-all}"
          }
        ]
      },
      "auctionsWrite" : {
        "ClusterId": "auctions",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods": ["POST", "PUT", "DELETE"]
        },
        "Transforms": [
          { 
            "PathPattern": "/api/auctions/{**catch-all}"
          }
        ]
      },
      "searchAuctionItems" : {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/auctionItems/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          { 
            "PathPattern": "/api/auctionItems/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionsApi": {
            "Address": "http://localhost:5276"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://localhost:7002"
          }
        }
      }
    }
  }
}
